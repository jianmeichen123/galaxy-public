<?xml version="1.0" encoding="UTF-8" ?>
<configuration scan="true" scanPeriod="1800 seconds" debug="false">
	<!--定义日志文件的存储地址 勿在 LogBack 的配置中使用相对路径 
    <property name="LOG_HOME" value="/tmp/logs" />  --> 



	<!-- 重载logback.xml -->
	<jmxConfigurator />
	<!-- 配置全局时间格式变量 -->
	<timestamp key="byDay" datePattern="yyyy-MM-dd" />
	
	
	
	<!-- 控制台输出日志 -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<!-- 日志输出编码 -->  
        <Encoding>UTF-8</Encoding> 
		 <encoder> 
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
			</pattern>
		</encoder>
	</appender>
	<!-- 文件输出日志 (文件大小策略进行文件输出，超过指定大小对文件备份) -->
	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<Encoding>UTF-8</Encoding>
		<file>${log4j.path}/sop.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<fileNamePattern>
				${log4j.path}/${byDay}/sop-%i.log.bak
			</fileNamePattern>
			<minIndex>1</minIndex>
			<maxIndex>12</maxIndex>
		</rollingPolicy>
		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<maxFileSize>300MB</maxFileSize>
		</triggeringPolicy>
		<encoder> 
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-4relative [%thread] [%file:%line] %-5level %logger{36} - %msg%n
			</pattern>
		</encoder>
	</appender>
	<!--这里指定logger name 是为jmx设置日志级别做铺垫 -->
	<logger name="com.galaxyinternet" level="debug" additivity="true">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</logger>
	
    <logger name="org.hibernate.xxx"  level="TRACE" /> 

	<root level="debug">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>