				<if test="taskName != null"> and task_name =#{taskName}</if>
				<if test="taskType != null and taskType!='' "> and task_type =#{taskType}</if>
				<if test="taskOrder != null and taskOrder!='' "> and task_order =#{taskOrder}</if>
				<if test="taskDeadline != null"> and task_deadline =#{taskDeadline}</if>
				<if test="departmentId != null and departmentId != ''"> and department_id =#{departmentId}</if>	
				<if test="assignUid != null and assignUid != ''">
					and (assign_uid =#{assignUid} or taskStatus='taskStatus:1' )
				</if>
				<if test="taskStatus != null and taskStatus!='' " > and task_status =#{taskStatus}</if>
				<if test="remark != null"> and remark =#{remark}</if>
				<if test="createdTime != null"> and created_time =#{createdTime}</if>
				<if test="updatedTime != null"> and updated_time =#{updatedTime}</if>
				<!-- 模糊查询 -->
				<!-- <if test="nameLike != null">and name like CONCAT("%",#{nameLike},"%")</if> -->
				<if test="ids != null">
					AND project_id IN
					<foreach collection="ids" index="item" item="item" open="("
						separator="," close=")">
						#{item}
					</foreach>
				</if>
			</trim>
		</where>
	</select>

	<!-- 查询 -->
	<select id="select" resultMap="BaseResultMap" parameterType="java.util.Map">
		select
		<include refid="Base_Column_List" />
		from sop_task
		<include refid="Base_Where_Clause" />
	</select>

	<!-- 根据ID查询 -->
	<select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.Long">
		select
		<include refid="Base_Column_List" />
		from sop_task where id = #{id}
	</select>

	<insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="SopTaskPO">
	    <![CDATA[
	        insert into
	        sop_task (
        	   id,
        	   project_id,
        	   task_name,
        	   task_type,
        	   task_order,
        	   task_deadline,
        	   department_id,
        	   assign_uid,
        	   task_status,
        	   remark,
        	   created_time
	        ) values (
        	   #{id},
        	   #{projectId},	   
        	   #{taskName},
        	   #{taskType},
        	   #{taskOrder},
        	   #{taskDeadline},
        	   #{departmentId},
        	   #{assignUid},
        	   #{taskStatus},
        	   #{remark},
        	   #{createdTime}
	        )
